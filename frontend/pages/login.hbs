<!-- login.hbs -->
<!DOCTYPE html>
<html>

<head>
  <title>Login | My App</title>
</head>

<body>
  {{> header}}
  {{> navbar}}
  <div class="container">
    <h1>Login</h1>
    <form action="/login" method="POST">
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
        placeholder="Enter email" name="email" required>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password"
        required>
    </div>
    <div class="form-group">
      <label for="exampleConfirmPassword1">Confirm Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="confirm_password"
        required>
    </div>
    {{!-- scroll down options --}}
    <div class="form-group">
      <label for="userType">User Type</label>
      <select class="form-control" id="userType" name="user_type">
        <option value="student">Student</option>
        <option value="admin">Admin</option>
        <option value="tutor">Tutor</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary" onclick="saveUsername()" style="
    position: absolute;
    width: 154px;
    height: 47px;
    left: 60px;
    top: 400px;
    background: #FFA7E6;
    transition: all 0.2s ease-in-out;
    border-radius: 100px;
    font-family: 'TS Safaa';
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 45px;
    border: none;
    text-align: center;
    color: #FFFFFF;
    text-decoration: none;
" >Submit</button>

   {{!-- <button type="submit" class="btn btn-primary" onclick="saveUsername()">Submit</button> --}}

    </form>
    </div>
    <script>
      function saveUsername() {
        const username = document.getElementById('exampleInputEmail1').value;
        localStorage.setItem('username', username);
      }
    </script>
    </body>
    
    </html>